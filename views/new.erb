<h1>Shoo: Pre-Order</h1>

<form action="/preorder" method="post">
  <label>First Name:</label>
  <input type="text" name="first_name">

  <label>Last Name:</label>
  <input type="text" name="last_name">

  <label>Address:</label>
  <input type="text" name="address">

  <label>Select UK Shoe Size (M/F):</label>
  <select name="size">
    <optgroup label="Male Shoes Size:">
      <option value="M - 7">7</option>
      <option value="M - 8">8</option>
      <option value="M - 9">9</option>
      <option value="M - 10">10</option>
      <option value="M - 11">11</option>
    </optgroup>
    <optgroup label="Female Shoes Size:">
      <option value="F - 4">4</option>
      <option value="F - 5">5</option>
      <option value="F - 6">6</option>
      <option value="F - 7">7</option>
      <option value="F - 8">8</option>
    </optgroup>
  </select>

  <label>Quantity:</label>
  <input type="number" name="quantity">

  <input type="submit" value="Order Now!">
</form>









